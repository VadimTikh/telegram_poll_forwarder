{
  "name": "telegram-poll-forwarder",
  "version": "2.0.0",
  "description": "Telegram poll forwarder with Twilio call alerts and web panel",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node -e \"require('fs').mkdirSync('dist/web',{recursive:true});require('fs').copyFileSync('src/web/index.html','dist/web/index.html')\"",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop poll-forwarder",
    "pm2:logs": "pm2 logs poll-forwarder"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "input": "^1.0.1",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "telegram": "^2.26.0",
    "winston": "^3.14.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/qrcode": "^1.5.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.6.0"
  }
}
